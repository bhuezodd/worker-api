{
    "compilerOptions": {
        "target": "es6",
        "typeRoots": [
            "./node_modules/@types"
        ],
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "module": "commonjs",
        "sourceMap": true,
        "rootDir": "./src",
        "outDir": "./dir",
        "allowJs": true,
        "noEmit": false,
        "esModuleInterop": true
    },
    "exclude": [
        "node_modules",
        "tests"
    ]
}